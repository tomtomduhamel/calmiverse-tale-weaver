
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "src/handlers",
      "src/services",
      "src/services/ai",
      "src/services/story"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
