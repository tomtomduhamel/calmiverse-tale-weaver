
{
  "functions": [
    {
      "source": "functions-v2",
      "codebase": "v2",
      "runtime": "nodejs20",
      "region": "us-central1",
      "minInstances": 0,
      "maxInstances": 10,
      "memory": "1GB",
      "timeoutSeconds": 540,
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "site": "calmi-99482",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
